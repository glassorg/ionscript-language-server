{
	"name": "ionscript-language-server",
	"description": "IonScript Language Server",
	"author": "Kris Nye",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/glassorg/ionscript-language-server.git"
	},
	"publisher": "krisnye",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:ionscript"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"ionscriptLanguageServer.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"ionscriptLanguageServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"languages": [
			{
				"id": "ionscript",
				"aliases": [
					"IonScript",
					"ionscript"
				],
				"extensions": [
					".is"
				],
				"configuration": "./language-configuration.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run build",
		"package": "vsce package",
		"build": "tsc -b",
		"build-yaml": "npm js-yaml syntaxes/ionscript.tmLanguage.yaml > syntaxes/ionscript.tmLanguage",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh",
		"clean": "rm -rf node_modules/ client/out/ client/node_modules/ server/out/ server/node_modules/",
		"install-dev": "code --install-extension ionscript-language-server-1.0.0.vsix"
	},
	"devDependencies": {
		"@types/mocha": "^8.0.3",
		"@types/node": "^12.12.0",
		"@typescript-eslint/parser": "^2.3.0",
		"eslint": "^6.4.0",
		"mocha": "^8.1.1",
		"typescript": "^4.0.2",
		"vsce": "^1.81.1"
	},
	"dependencies": {
		"@glas/traverse": "^1.0.4",
		"ionscript": "^0.2.8",
		"js-yaml": "^3.14.0"
	}
}
